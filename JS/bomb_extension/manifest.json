{
  "manifest_version": 3,
  "name": "HTML Viewer",
  "version": "1.0",
  "description": "Capture and display the HTML content of a webpage",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
